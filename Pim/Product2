                    <!-- "Add" Button -->
                    <div class="image-upload" id="add-button"
                        style="width: 324px; height: 216px; background-color: #B4DBD4; display: flex; justify-content: center; align-items: center; border-radius: 8px; cursor: pointer;">
                        <input type="file" id="imageUpload" accept="image/*" style="display: none;" multiple />
                        <i class="bi bi-plus-circle-fill fs-1" style="color: #326373;"></i>
                    </div>
                </div>
            </section>
            <script>
                const fileInput = document.getElementById("imageUpload");
                const addButton = document.getElementById("add-button");
                const previewContainer = document.getElementById("preview-container");

                addButton.addEventListener("click", () => {
                    fileInput.click();
                });

                fileInput.addEventListener("change", (event) => {
                    const files = Array.from(event.target.files);

                    files.forEach((file) => {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            const img = document.createElement("img");
                            img.src = e.target.result;
                            img.style.width = "324px";
                            img.style.height = "216px";
                            img.style.objectFit = "cover";

                            img.style.boxShadow = "0 2px 6px rgba(0, 0, 0, 0.15)";

                            // Insert before the "Add" button
                            previewContainer.insertBefore(img, addButton);
                        };
                        reader.readAsDataURL(file);
                    });

                    // Reset input so same file can be uploaded again
                    fileInput.value = "";
                });
            </script>
        </div>

        <!-- 右边 PriceList -->
